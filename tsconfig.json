{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "build",
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/web/**/*.ts", "src/web/**/*.tsx"],
    "exclude": ["node_modules/"]
}
